{% extends 'base.html.twig' %}

{% block title %}Hello CodeController!{% endblock %}

{% block body %}
    <style type="text/css">
        .example-wrapper {
            margin: 2em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        a {
            text-decoration: none;
            color: black;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .normal {
            border: 1px solid black;
            height: 2em;
        }

        .dejajoue {
            border: 1px solid black;
            background-color: lightgreen;
        }
    </style>

    <div class="example-wrapper">
        <h1>TP4 ‚úÖüçüüçï</h1>
    </div>

    <div class="example-wrapper">
        <h2> A la recherche du nombre {{ aTrouve }} </h2>
        <table>
            <tbody>
            <tr>
                {% set i = 0 %}
                {% for i in range(0, 30) %}
                    {% if i == aTrouve %}
                        <td class="dejajoue">
                    {% else %}
                        <td class="normal">
                    {% endif %}
                    <a href="{{ path('code', {"i":i, "histo":histo}) }}"> {{ i }} </a>
                    </td>
                {% endfor %}
            </tr>
            </tbody>
        </table>
    </div>


